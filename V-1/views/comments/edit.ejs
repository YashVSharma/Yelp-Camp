<%- include("../partials/header.ejs") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit comment on <%= foundId.name %> </h1>
        <div style="width:30%; margin:30px auto;">
             <form action="/campgrounds/<%= foundId %>/comments/<%=comment._id%>?_method=PUT" method="POST" >
                 
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" text="<%=comment.text%>">
                </div>
                
                <div class="form-group">    
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
             </form> 
             <a href="/campgrounds/<%= foundId %>">Go Back</a>   
        </div>
    </div>    
</div>
<%- include("../partials/footer.ejs") %>