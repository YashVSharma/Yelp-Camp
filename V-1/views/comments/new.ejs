<%- include("../partials/header.ejs") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Comment on <%= foundId.name %> </h1>
        <div style="width:30%; margin:30px auto;">
             <form action="/campgrounds/<%= foundId._id %>/comments" method="POST" >
                 
                <div class="form-group">
                    <input class="form-control" type="text" name="text" placeholder="Comment">
                </div>
                
                <div class="form-group">    
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
             </form> 
             <a href="/campgrounds/<%= foundId._id %>">Go Back</a>   
        </div>
    </div>    
</div>
<%- include("../partials/footer.ejs") %>